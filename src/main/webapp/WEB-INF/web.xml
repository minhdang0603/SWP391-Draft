<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
    <!--404 error-->
    <error-page>
        <error-code>404</error-code>
        <location>/common/page-error-404.jsp</location>
    </error-page>
    <error-page>
        <error-code>405</error-code>
        <location>/common/page-error-404.jsp</location>
    </error-page>
    <error-page>
        <error-code>400</error-code>
        <location>/common/page-error-404.jsp</location>
    </error-page>
    <filter>
        <filter-name>url-filter</filter-name>
        <filter-class>com.web.laptoptg.filter.URLFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>url-filter</filter-name>
        <url-pattern>*.jsp</url-pattern>
        <url-pattern>*.html</url-pattern>
        <url-pattern>*.xml</url-pattern>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>authorization</filter-name>
        <filter-class>com.web.laptoptg.filter.AuthorizeFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authorization</filter-name>
        <url-pattern>/waiting</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>login</filter-name>
        <filter-class>com.web.laptoptg.filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>login</filter-name>
        <url-pattern>/complete-order</url-pattern>
        <url-pattern>/online-payment</url-pattern>
        <url-pattern>/order-process</url-pattern>
        <url-pattern>/profile</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>customerFilter</filter-name>
        <filter-class>com.web.laptoptg.filter.CustomerFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>customerFilter</filter-name>
        <url-pattern>/home</url-pattern>
        <url-pattern>/cart</url-pattern>
        <url-pattern>/product-detail</url-pattern>
        <url-pattern>/terms-and-conditions</url-pattern>
        <url-pattern>/store</url-pattern>
        <url-pattern>/search</url-pattern>
        <url-pattern>/rating-process</url-pattern>
        <url-pattern>/complete-order</url-pattern>
        <url-pattern>/online-payment</url-pattern>
        <url-pattern>/order-process</url-pattern>
        <url-pattern>/checkout-page</url-pattern>
        <url-pattern>/load</url-pattern>
    </filter-mapping>
</web-app>